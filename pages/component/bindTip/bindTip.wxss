@import "../../../__wuBaseWxss__/1.wxss";

@import "../../../app.wxss";

.prompt {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999999;
    background: rgba(7,14,20,0.4);
}

.prompt-con {
    width: 573rpx;
    height: 646rpx;
    background: #ffffff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
}

.prompt-con image {
    width: 446rpx;
    height: 404rpx;
    margin-bottom: 10rpx;
}

.prompt-con-foot {
    width: 100%;
    margin-top: 30rpx;
}

.prompt-con-btn {
    width: 80%;
    height: 64rpx;
    border-radius: 32rpx;
    background: linear-gradient(to top,rgba(67,198,255,1),rgba(45,172,255,1));
    line-height: 64rpx;
    letter-spacing: 8rpx;
    text-align: center;
    margin: 0 auto;
}

.prompt-tm {
    background: rgba(7,14,20,0.4);
}

.prompt-b {
    background: #FFF;
}

.prompt-close {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 5rpx;
    top: 5rpx;
    text-align: center;
    line-height: 60rpx;
}

.prompt-close .iconfont {
    font-size: 45rpx;
    color: #999999;
}