.my-eval {
    padding-top: 20rpx;
    background: #f5f8fa;
}

.discover-item {
    padding: 22rpx 24rpx 27rpx;
}

.discover-item-title {
    margin-bottom: 16rpx;
}

.discover-item-title image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.discover-item-con {
    margin-bottom: 24rpx;
}

.discover-item-pic {
    width: 100%;
    margin-bottom: 34rpx;
}

.discover-item-img {
    width: 33.3%;
    height: 210rpx;
}

.discover-item-img image {
    width: 210rpx;
    height: 210rpx;
    border-radius: 6rpx;
}

.discover-item-img-kuai {
    position: relative;
    width: 210rpx;
    height: 210rpx;
    margin: 0 auto;
}

.discover-item-img-more {
    width: 210rpx;
    height: 210rpx;
    border-radius: 6rpx;
    line-height: 210rpx;
    background: rgba(0,0,0,0.6);
    position: absolute;
    top: 0;
    left: 0;
}

.discover-item-server {
    margin-bottom: 24rpx;
}

.discover-item-server-price {
    color: #FF5252;
    margin-left: 10rpx;
}

.discover-item-server image {
    width: 28rpx;
    height: 28rpx;
    margin: 0 3rpx;
}

.discover-item-server image:nth-child(1) {
    margin-left: 10rpx;
}

.discover-item-hf {
    width: 100%;
    padding: 18rpx 20rpx;
    background: #F3F3F3;
    border-radius: 12rpx;
    margin-bottom: 24rpx;
    position: relative;
}

.discover-item-hf::before {
    display: block;
    content: "";
    border-bottom: 28rpx solid #f3f3f3;
    border-top: 28rpx solid transparent;
    border-left: 26rpx solid transparent;
    border-right: 26rpx solid transparent;
    position: absolute;
    top: -52rpx;
    left: 34rpx;
}

.discover-item-mer {
    padding: 9rpx 7rpx;
    box-shadow: 2rpx 2rpx 13rpx rgba(0,0,0,0.09);
    border-radius: 14rpx;
}

.discover-item-mer-img {
    width: 86rpx;
    height: 86rpx;
    border-radius: 10rpx;
    margin-right: 15rpx;
}

.discover-item-mer-name {
    max-width: 430rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.discover-item-mer-text {
    margin-right: 23rpx;
}

.discover-item-mer-go {
    width: 134rpx;
    height: 45rpx;
    border-radius: 23rpx;
    line-height: 45rpx;
    background: linear-gradient(to bottom,rgba(82,215,255,1),rgba(33,156,252,1));
}

.discover-item-time {
    margin-top: -30rpx;
}

.discover-item-delete {
    justify-content: flex-end;
    position: relative;
    z-index: 999;
    margin-bottom: 20rpx;
}

.discover-item-delete button {
    width: 120rpx;
    height: 46rpx;
    border-radius: 23rpx;
    line-height: 46rpx;
    border: 1rpx solid #999999;
    background: transparent;
}

.no-evaluate {
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100vh;
    background: transparent;
}

.no-evaluate image {
    width: 295rpx;
    height: 335rpx;
    margin-bottom: 20rpx;
    margin-top: -200rpx;
}