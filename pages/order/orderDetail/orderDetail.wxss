.head {
    height: 78rpx;
    background: rgba(255,255,255,0.6);
    padding: 0 24rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.title {
    height: 78rpx;
    background: transparent;
    width: 702rpx;
}

.title-status {
    color: #adadad;
}

.title-status.active {
    color: #009bff;
}

.pro {
    width: 645rpx;
    height: 3rpx;
    position: absolute;
    bottom: 8rpx;
    left: 52rpx;
}

.pro-status {
    width: 25%;
    height: 4rpx;
    position: relative;
    background: #adadad;
}

.pro-status.active {
    background: #009bff;
}

.big-circle {
    width: 13rpx;
    height: 13rpx;
    border-radius: 7rpx;
    background: #009bff;
    position: absolute;
    left: 0;
    top: -3rpx;
    display: none;
}

.last-b-cir {
    width: 13rpx;
    height: 13rpx;
    border-radius: 7rpx;
    background: #009bff;
    position: absolute;
    right: 0;
    top: -3rpx;
    display: none;
}

.pro-status .active {
    display: block;
}

.order-detail {
    padding: 20rpx 24rpx 120rpx;
    background: #F5F8FA;
}

.order-top {
    padding: 22rpx 39rpx 10rpx 20rpx;
    border-radius: 20rpx;
}

.mer-img image {
    width: 208rpx;
    height: 208rpx;
    border-radius: 20rpx;
    margin-right: 24rpx;
}

.mer-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 412rpx;
    margin-bottom: 10rpx;
}

.score-yueshou {
    margin-left: 20rpx;
}

.order-top-address {
    width: 412rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.call-mer {
    height: 50rpx;
    width: 300rpx;
}

.call-mer-phone {
    width: 38rpx;
    height: 38rpx;
    float: left;
}

.call-mer-txt {
    line-height: 100%;
    float: left;
    margin-top: 11rpx;
}

.order-con {
    border-radius: 20rpx;
    padding-bottom: 1rpx;
    margin-top: 20rpx;
}

.order-con-bottom {
    padding-top: 20rpx;
}

.order-img {
    width: 702rpx;
    height: 288rpx;
    border-radius: 20rpx 20rpx 0 0;
}

.order-status {
    padding: 0 20rpx;
    margin-bottom: 51rpx;
    padding-top: 20rpx;
    border-radius: 20rpx;
}

.order-info {
    padding: 0 20rpx;
    margin-bottom: 30rpx;
}

.order-info>view:nth-child(2) {
    width: 490rpx;
    margin-left: 24rpx;
}

.order-info-star {
    width: 28rpx;
    height: 28rpx;
    margin: 0 3rpx;
}

.order-info-img {
    width: 33.333%;
    height: 150rpx;
}

.order-info-img-item {
    width: 150rpx;
    height: 150rpx;
    border-radius: 6rpx;
    position: relative;
    margin: 0 auto;
}

.order-info-img-item image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 6rpx;
}

.order-info-img-item-mc {
    width: 150rpx;
    height: 150rpx;
    border-radius: 6rpx;
    background: rgba(0,0,0,0.6);
    position: absolute;
    top: 0;
    left: 0;
    justify-content: center;
}

.beizhu {
    padding: 0 18rpx;
    height: 48rpx;
    line-height: 48rpx;
    background: linear-gradient(to right,#22a7fc,#24adfc,#2abbfc);
    border-radius: 24rpx;
    box-shadow: 0 0 29rpx RGBA(0,172,255,0.28);
}

.bottom {
    width: 100%;
    border-top: 1rpx solid #e7e7e7;
    background: #F5F8FA;
    padding: 0 48rpx;
    justify-content: flex-end;
    position: fixed;
    bottom: 0;
    left: 0;
}

.bottom-status {
    width: 169rpx;
    height: 56rpx;
    border-radius: 28rpx;
    border: 1rpx solid;
    text-align: center;
    line-height: 56rpx;
    margin-left: 24rpx;
    background: #F5F8FA;
    margin-top: 22rpx;
    margin-bottom: 22rpx;
}

.bhui {
    border-color: #999999;
}

.blan {
    background: #219cfc;
    border-color: #219cfc;
}

.quxiao {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.3);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999999;
}

.container {
    width: 623rpx;
    height: 402rpx;
    border-radius: 30rpx;
    position: absolute;
    bottom: 420rpx;
    right: 48rpx;
    box-shadow: 0 0 9rpx 6rpx rgba(8,154,254,0.32);
    align-items: flex-end;
}

.container image {
    width: 279rpx;
    height: 371rpx;
    margin-left: -29rpx;
}

.sure {
    color: #686868;
    margin-bottom: 61rpx;
}

.yes {
    width: 249rpx;
    height: 75rpx;
    border-radius: 38rpx;
    color: #686868;
    line-height: 75rpx;
    background: #eeeeee;
    margin-bottom: 35rpx;
}

.no {
    width: 249rpx;
    height: 75rpx;
    border-radius: 38rpx;
    line-height: 75rpx;
    background: linear-gradient(to right,#22a7fc,#24adfc,#2abbfc);
    margin-bottom: 40rpx;
}

.order-refund {
    width: 100%;
    padding: 34rpx 44rpx 24rpx;
}

.order-refund-middle {
    margin-top: 10rpx;
}