.cancel {
    padding: 0 24rpx;
    background: #f5f8fa;
}

.content {
    padding: 10px;
    border-radius: 20rpx;
    margin-top: 28rpx;
}

.con {
    padding: 0 10rpx;
}

.cancel-content {
    margin: 30rpx 0;
}

.cancel-check {
    width: 45rpx;
    height: 45rpx;
    border-radius: 23rpx;
    position: relative;
    overflow: hidden;
}

.no-choose {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.choose {
    width: 117rpx;
    height: 117rpx;
    position: absolute;
    top: -36rpx;
    left: -36rpx;
    z-index: 999;
    display: none;
}

.choose.active {
    display: block;
}

.yuanyin {
    margin-top: 28rpx;
    padding: 32rpx;
    border-radius: 20rpx;
    height: 300rpx;
}

.foot {
    background: #f5f8fa;
    margin-top: 28rpx;
}

.submit {
    width: 702rpx;
    height: 98rpx;
    position: fixed;
    left: 24rpx;
    bottom: 24rpx;
    line-height: 98rpx;
    background: #219cfc;
    border-radius: 12rpx;
    letter-spacing: 5rpx;
}