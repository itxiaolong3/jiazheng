.discover-head {
    width: 100%;
    position: relative;
    background: linear-gradient(0deg,rgba(65,195,254,1),rgba(33,156,252,1));
    padding-bottom: 300rpx;
}

.discover-head view {
    background: transparent;
}

.discover-head-near {
    width: 272rpx;
    height: 200rpx;
    position: absolute;
    right: 12rpx;
    top: 0;
}

.discover-head-tt {
    justify-content: center;
    height: 80rpx;
}

.discover-head-tt-con {
    height: 100%;
    line-height: 80rpx;
    margin: 0 45rpx;
    position: relative;
}

.discover-head-tt-con.active {
    font-size: 38rpx;
}

.discover-head-tt-con.active::before {
    display: block;
    content: "";
    width: 100%;
    height: 6rpx;
    border-radius: 3rpx;
    background: #ffffff;
    position: absolute;
    top: 100%;
    right: 0;
}

.discover-head-banner {
    padding: 30rpx 24rpx 0;
}

.discover-head-banner image {
    width: 702rpx;
    height: 298rpx;
    border-radius: 24rpx;
}

.discover-head-scroll {
    width: 100%;
    white-space: nowrap;
}

.discover-head-scroll view {
    display: inline-block;
    margin: 0 25rpx;
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
}

.discover-head-scroll view.active::before {
    display: block;
    content: "";
    width: 100%;
    height: 6rpx;
    border-radius: 3rpx;
    background: #ffffff;
    position: absolute;
    top: 85%;
    right: 0;
}

.discover-list {
    background: transparent;
    padding: 0 24rpx;
    position: relative;
    margin-top: -284rpx;
    z-index: 999;
}

.discover-item {
    padding: 22rpx 24rpx 28rpx;
    border-radius: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 0 20rpx 1rpx rgba(0,0,0,0.1);
}

.discover-item-title {
    margin-bottom: 16rpx;
}

.discover-item-title image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.discover-item-con {
    margin-bottom: 24rpx;
}

.discover-item-pic {
    width: 100%;
    margin-bottom: 34rpx;
    flex-wrap: wrap;
}

.discover-item-img {
    width: 33.3%;
    height: 210rpx;
}

.discover-item-img image {
    width: 210rpx;
    height: 210rpx;
    border-radius: 6rpx;
}

.discover-item-img-kuai {
    position: relative;
    width: 210rpx;
    height: 210rpx;
    margin: 0 auto;
}

.discover-item-img-more {
    width: 210rpx;
    height: 210rpx;
    border-radius: 6rpx;
    line-height: 210rpx;
    background: rgba(0,0,0,0.6);
    position: absolute;
    top: 0;
    left: 0;
}

.discover-item-server {
    margin-bottom: 24rpx;
}

.discover-item-server-price {
    color: #FF5252;
    margin-left: 10rpx;
}

.discover-item-server image {
    width: 28rpx;
    height: 28rpx;
    margin: 0 3rpx;
}

.discover-item-server image:nth-child(1) {
    margin-left: 10rpx;
}

.discover-item-hf {
    width: 100%;
    padding: 18rpx 20rpx;
    background: #F3F3F3;
    border-radius: 12rpx;
    margin-bottom: 24rpx;
    position: relative;
}

.discover-item-hf::before {
    display: block;
    content: "";
    border-bottom: 28rpx solid #f3f3f3;
    border-top: 28rpx solid transparent;
    border-left: 26rpx solid transparent;
    border-right: 26rpx solid transparent;
    position: absolute;
    top: -52rpx;
    left: 34rpx;
}

.discover-item-mer {
    padding: 9rpx 7rpx;
    box-shadow: 2rpx 2rpx 13rpx rgba(0,0,0,0.09);
    border-radius: 14rpx;
    margin-top: 20rpx;
}

.discover-item-mer-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
    margin-right: 15rpx;
    padding: 10rpx;
}

.discover-item-mer-name {
    max-width: 430rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.discover-item-mer-text {
    margin-right: 23rpx;
}

.discover-item-mer-go {
    width: 134rpx;
    height: 45rpx;
    border-radius: 23rpx;
    line-height: 45rpx;
    background: linear-gradient(to bottom,rgba(82,215,255,1),rgba(33,156,252,1));
    margin-right: 25rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.no-discover {
    width: 100%;
    flex-direction: column;
    background: transparent;
    margin-top: -300rpx;
    position: relative;
    background: #f5f8fa;
    padding-top: 200rpx;
}

.no-discover image {
    width: 295rpx;
    height: 335rpx;
}