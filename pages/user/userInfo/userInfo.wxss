.shadow {
    box-shadow: 0 0 10px 0 RGBA(6,6,6,0.23);
}

.spacing {
    letter-spacing: 4rpx;
}

.information {
    background: #F5F8FA;
    padding: 20rpx 24rpx;
}

.head-portrait {
    padding: 9rpx 20rpx;
    border-radius: 10rpx;
}

.info image {
    width: 82rpx;
    height: 82rpx;
    margin-right: 16rpx;
}

.modify {
    margin-top: 28rpx;
    border-radius: 10rpx;
}

.modify-list {
    padding: 37rpx 20rpx;
}

.br {
    padding: 0;
    height: 2rpx;
    width: 100%;
    background: #f5f5f5;
}

.name {
    border-radius: 10rpx 10rpx 0 0;
}

.modify-list input {
    margin-right: 30rpx;
}

.picker-view {
    margin-left: 15rpx;
}

.phone {
    border-radius: 0 0 10rpx 10rpx;
}

.phone-view {
    width: 300rpx;
}

.telphone-number {
    margin-right: 15rpx;
}

.userinfo-button {
    width: 702rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: #219cfc!important;
    border-radius: 12rpx;
    position: fixed;
    bottom: 10rpx;
    left: 24rpx;
    letter-spacing: 3rpx;
}